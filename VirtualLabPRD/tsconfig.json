{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx", // Or "react" for older React versions
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
